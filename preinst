#!/bin/sh
# preinst script for opensmtpd
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    install|upgrade)
    mkdir -p /var/empty
    addgroup --force-badname --system _smtpd
    adduser --force-badname --system --home /var/empty --no-create-home --disabled-login _smtpd --ingroup _smtpd
    addgroup --force-badname --system _smtpf
    adduser --force-badname --system --home /var/empty --no-create-home --disabled-login _smtpf --ingroup _smtpf
    addgroup --force-badname --system _smtpq
    adduser --force-badname --system --home /var/empty --no-create-home --disabled-login _smtpq --ingroup _smtpq
    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0
