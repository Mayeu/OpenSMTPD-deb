#!/bin/sh
# postrm script for opensmtpd
#
# see: dh_installdeb(1)

set -e

case "$1" in
    purge)
        update-rc.d opensmtpd remove
        deluser --system --remove-home --quiet _smtpd || true
        deluser --system --remove-home --quiet _smtpf || true
        deluser --system --remove-home --quiet _smtpq || true
        rm -R /var/spool/smtpd/
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

exit 0
